rule self_mapping:
    input:
        reads = "{path}reads{suffix,.*}.fasta"

    output:
        mapping = "{path}reads{suffix,.*}.paf"

    threads:
        8

    shell:
        " ".join([config["minimap"]["bin"],
                  config["minimap"]["ovl_option"]+config["read_type"],
                  "-t", "{threads}",
                  "{input}", "{input}",
                  ">", "{output}"
                ])

rule spliting_reads:
    input:
        mapping = "{path}.paf",
        reads = "{path}.fasta"

    output:
        splited_read = "{path}_splited.fasta",
        yacrd = "{path}.yacrd"

    shell:
        "yacrd -i {input.mapping} -s {input.reads} -o {output.yacrd}"

rule overlap2overlapgraph:
    input:
        "{path}.paf"
    
    output:
        "{path}.gfa"
    
    shell:
        "fpa -o gfa1 -s -c -i {output} {input}"
